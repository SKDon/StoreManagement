@model  StoreManagement.Data.Entities.Location

@{
    ViewBag.Title = "Delete";
}






<div class="col-md-12">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Locations</div>
            </div>
            <div class="bootstrap-admin-panel-content">
                <h2>Location Management</h2>

                <h2>Delete</h2>


                 
                <h3>Are you sure you want to delete this?</h3>
                <fieldset>
                    <legend>Location</legend>

                    <div class="display-label">StoreId</div>
                    <div class="display-field">@Model.StoreId</div>

                    <div class="display-label">Address</div>
                    <div class="display-field">@Model.Address</div>

                    <div class="display-label">City</div>
                    <div class="display-field">@Model.City</div>

                    <div class="display-label">LocationState</div>
                    <div class="display-field">@Model.LocationState</div>

                    <div class="display-label">Postal</div>
                    <div class="display-field">@Model.Postal</div>

                    <div class="display-label">Country</div>
                    <div class="display-field">@Model.Country</div>

                    <div class="display-label">Latitude</div>
                    <div class="display-field">@Model.Latitude</div>

                    <div class="display-label">Longitude</div>
                    <div class="display-field">@Model.Longitude</div>

                    <div class="display-label">Ordering</div>
                    <div class="display-field">@Model.Ordering</div>

                    <div class="display-label">State</div>
                    <div class="display-field">@Model.State</div>

                    <div class="display-label">CreatedDate</div>
                    <div class="display-field">@String.Format("{0:g}", Model.CreatedDate)</div>

                    <div class="display-label">UpdatedDate</div>
                    <div class="display-field">@String.Format("{0:g}", Model.UpdatedDate)</div>
                </fieldset>
                @using (Html.BeginForm())
                {
                    <p>
                        <input type="submit" value="Delete" />
                        |
        @Html.ActionLink("Back to List", "Index")
                    </p>
                }




            </div>
        </div>
    </div>



</div>



