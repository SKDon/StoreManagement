@model IEnumerable<StoreManagement.Data.Entities.Store>
@{
    String actionName = ViewBag.ActionName;
    String controllerName = ViewBag.ControllerName;
    bool isSuperAdmin = ViewBag.IsSuperAdmin;
}

@if (isSuperAdmin)
{
    <b>Store Filters   :
    </b>
    @Html.ActionLink("All", actionName, controllerName, new {storeId = 0}, new {@class = "btn btn-default"})   @:|
    foreach (var t in Model)
    {
        @Html.ActionLink(t.Name, actionName, controllerName, new {storeId = t.Id}, new {@class = "btn btn-default"})
    }
}
 