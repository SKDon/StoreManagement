@model StoreManagement.Data.Entities.Brand

@{
    ViewBag.Title = "Delete";
}



<div class="col-md-12">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">
                    <h4>Delete Brand</h4>
                </div>
            </div>
            <div class="bootstrap-admin-panel-content">

                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <fieldset>
                    <legend>Brand</legend>

              
                    <div class="display-label">Name</div>
                    <div class="display-field">@Model.Name</div>

                    <div class="display-label">Description</div>
                    <div class="display-field">@Model.Description</div>

                    <div class="display-label">State</div>
                    <div class="display-field">@Model.State</div>

                    <div class="display-label">Ordering</div>
                    <div class="display-field">@Model.Ordering</div>

                    <div class="display-label">CreatedDate</div>
                    <div class="display-field">@String.Format("{0:g}", Model.CreatedDate)</div>

                    <div class="display-label">UpdatedDate</div>
                    <div class="display-field">@String.Format("{0:g}", Model.UpdatedDate)</div>
                </fieldset>
                         <p>
                    <input class="btn btn-danger btn-block btn-lg"  data-toggle = "modal"  data-target = "#myDeleteModal" type="submit" id="MyDeleteButton" value="Delete" />
               @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-lg btn-block"  })

     
                </p>
                

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                   <input type="submit" style="display: none;" id="DeleteItemButton" />
                }



            </div>
        </div>
    </div>
</div>


