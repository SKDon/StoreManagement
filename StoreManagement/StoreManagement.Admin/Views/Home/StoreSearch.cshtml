@using StoreManagement.Data.GeneralHelper
 
@{
    string search = @Request.QueryString["adminsearchkey"].ToStr();
    var isSuperAdmin = Roles.GetRolesForUser(User.Identity.Name).Contains("SuperAdmin");
 

}

@using (Html.BeginForm(isSuperAdmin ? "SuperAdminSearch" : "AdminSearch", "Home", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
{
    <div class="form-group">
        <input type="text" class="form-control" name="adminsearchkey" value="@search" placeholder="Search...">
    </div>
    <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
}


