@model StoreManagement.Data.Entities.Category

@{
    ViewBag.Title = "Delete";
}





<div class="col-md-12">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Alerts</div>
            </div>
            <div class="bootstrap-admin-panel-content">


                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <fieldset>
                    <legend>Category</legend>

                    <div class="display-label">StoreId</div>
                    <div class="display-field">@Model.StoreId</div>

                    <div class="display-label">ParentId</div>
                    <div class="display-field">@Model.ParentId</div>

                    <div class="display-label">Ordering</div>
                    <div class="display-field">@Model.Ordering</div>

                    <div class="display-label">CategoryType</div>
                    <div class="display-field">@Model.CategoryType</div>

                    <div class="display-label">Name</div>
                    <div class="display-field">@Model.Name</div>
                </fieldset>
            
                    
                <p>
                    <input class="btn btn-danger btn-block btn-lg" data-toggle = "modal"  data-target = "#myDeleteModal" type="submit" id="MyDeleteButton" value="Delete" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-lg btn-block" })
                </p>
                

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                   <input type="submit" style="display: none;" id="DeleteItemButton" />
                }




            </div>
        </div>
    </div>



</div>





