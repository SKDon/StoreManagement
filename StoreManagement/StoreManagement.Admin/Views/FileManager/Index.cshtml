@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>





@Html.Partial("_LeftMenu")

<div class="col-md-10">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Alerts</div>
            </div>
            <div class="bootstrap-admin-panel-content">

                <h2>Images</h2>

                <div class="row">
                    @Html.Action("StoresDropDown", "Stores")
                </div>
                <div class="row">
                    <div class="col-md-5">
                         @using (Html.BeginForm("DisplayImages", "FileManager", FormMethod.Get))
                        {
                            <input type="hidden" id="tempStoreId" name="storeId"/>
                            <p>
                                <input type="submit" value="Display Images" class = "btn btn-primary btn-block" />
                            </p>
                        }
                    </div>
                    <div class="col-md-5">
                        @using (Html.BeginForm("UploadImages", "FileManager", FormMethod.Get))
                        {
                            <input type="hidden" id="tempStoreId2" name="storeId"/>
                            <p>
                                <input type="submit" value="Upload Images" class = "btn btn-primary btn-block" />
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    
    
<script>


    $(document).ready(function () {

        $("#tempStoreId").val($('select#StoreDropDownId').val());
        $("#tempStoreId2").val($('select#StoreDropDownId').val());
        $('select#StoreDropDownId').chosen({}).change(function (event) {
            $("#tempStoreId").val($(this).val());
            $("#tempStoreId2").val($(this).val());
        });


    });

</script>

    


}
